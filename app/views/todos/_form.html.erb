<% if todo.errors.present? %>
  <ul>
    <% todo.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end %>
<div class="form">
<%= form_for todo do |f| %>
  <div class="form-group">
    <%= f.label :name, "Task : " %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :due_date, "Due Date : " %>
    <%= f.date_select :due_date , class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :note, "Detail : " %>
    <%= f.text_area :note %>
  </div>
  <%= f.submit %>
<% end %>
</div>
